@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.SuccessSection)Model.Content;
    var statList = content.StatisticsList;
}

<section class="success">
    <div class="container">
        <div class="header">
            <p class="label">SUCCESS STORIES</p>
            <h2>Success story</h2>
        </div>
        @if (content.BgImage != null)
        {
            <div class="bg-image">
                <img src="@content.BgImage.Url()">
            </div>
        }
        <div class="statistics flex-center semi-bold">
            @if (statList != null)
            {
                for (int i = 0; i < statList.Count; i++)
                {
                    var stat = (ContentModels.Statistic)statList[i].Content;
                    <div class="statistic-item">
                        <p class="number">@stat.StatisticNumber</p>
                        <p class="text">@stat.StatisticTitle</p>
                    </div>
                }
            }
        </div>
        @if (content.SuccessImage != null)
        {
            <div class="image">
                <img src="@content.SuccessImage.Url()">
            </div>
        }
    </div>
</section>
