@using OnatrixCMS.ViewModels
@model CallbackViewModel

@using (Html.BeginUmbracoForm("HandleCallbackForm", "FormController", FormMethod.Post, new {novalidate = "novalidate", id = "callbackForm"}))
{
	<div class="form-body">

		<div class="input-group name">
			@* <label asp-for="Name"></label> *@
			<input asp-for="Name" placeholder="@Html.DisplayNameFor(x => x.Name)" />
			<span asp-validation-for="Name"></span>
		</div>

		<div class="input-group email">
			@* <label asp-for="Email"></label> *@
			<input asp-for="Email" placeholder="@Html.DisplayNameFor(x => x.Email)" />
			<span asp-validation-for="Email"></span>
		</div>

		<div class="input-group phone">
			@* <label asp-for="PhoneNumber"></label> *@
			<input asp-for="PhoneNumber" placeholder="@Html.DisplayNameFor(x => x.PhoneNumber)" />
			<span asp-validation-for="PhoneNumber"></span>
		</div>

		<div class="select-group">
			@* <label asp-for="PhoneNumber"></label> *@
			<select asp-for="SelectedOption">
				<option class="placeholder" value="" disabled hidden selected>Please select an option</option>
				<option value="Financial consulting">Financial consulting</option>
				<option value="Statistics">Statistics</option>
				<option value="Risk management">Risk management</option>
			</select>

			<span class="icon flex-center">
				<i class="fa-solid fa-chevron-down"></i>
			</span>

			<span asp-validation-for="SelectedOption"></span>
		</div>

		<button class="btn-main" type="submit">Submit</button>
	</div>
}