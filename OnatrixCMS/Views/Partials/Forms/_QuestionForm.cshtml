@using OnatrixCMS.ViewModels
@model QuestionViewModel

@using (Html.BeginUmbracoForm("HandleQuestionForm", "Form", FormMethod.Post, new { novalidate = "novalidate", id = "questionForm" }))
{
	<div class="sender">
		<div class="input-group name">
			<input asp-for="Name" placeholder="@Html.DisplayNameFor(x => x.Name)" />
			<span asp-validation-for="Name"></span>
		</div>

		<div class="input-group email">
			<input asp-for="Email" placeholder="@Html.DisplayNameFor(x => x.Email)" />
			<span asp-validation-for="Email"></span>
		</div>
	</div>

	<div class="input-group question-area">
		<textarea asp-for="Question" placeholder="@Html.DisplayNameFor(x => x.Question)"></textarea>
		<span asp-validation-for="Question"></span>
	</div>

	<button class="btn-main" type="submit">Submit</button>
}